<Window x:Class="ANS.SeleccionDeBanco"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Selección de Banco"
        Width="1080" Height="680"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal"
        Background="White">

    <!-- ===== Recursos locales (mismos del main) ===== -->
    <Window.Resources>
        <SolidColorBrush x:Key="Brush.AppBar" Color="#D32F2F"/>
        <SolidColorBrush x:Key="Brush.Border" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="Brush.TextPrimary" Color="#212121"/>
        <SolidColorBrush x:Key="Brush.TextSecondary" Color="#616161"/>

        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource Brush.TextPrimary}"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#20FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#30FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BankTileButton" TargetType="Button" BasedOn="{StaticResource IconButton}">
            <Setter Property="Width" Value="160"/>
            <Setter Property="Height" Value="140"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#BDBDBD"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="56"/>
            <!-- AppBar -->
            <RowDefinition Height="*"/>
            <!-- Contenido -->
        </Grid.RowDefinitions>

        <!-- APP BAR (rojo igual al main) -->
        <Border Grid.Row="0" Background="{StaticResource Brush.AppBar}">
            <Grid Margin="16,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="Bank" Width="22" Height="22" Foreground="White" Margin="0,0,8,0"/>
                    <TextBlock Text="Tecnisegur Automatic Accreditation System"
                               Foreground="White" FontSize="16" FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <TextBlock Grid.Column="1" Text="Selección de banco"
                           Foreground="White" FontSize="18" FontWeight="Bold"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>

                <Button Grid.Column="2" Style="{StaticResource IconButton}" ToolTip="Cerrar"
                        Click="CloseButton_Click" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="Close" Width="20" Height="20" Foreground="White"/>
                </Button>
            </Grid>
        </Border>

        <!-- CONTENIDO CLARO -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Bancos -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Bancos" Style="{StaticResource SectionTitle}"/>

                    <UniformGrid Grid.Row="1" Columns="3" Rows="2" Margin="4,8,4,0" HorizontalAlignment="Center">
                        <Button Style="{StaticResource BankTileButton}" Tag="Bandes" Click="BankButton_Click">
                            <Image Source="/Images/bandes.png" Stretch="Uniform"/>
                        </Button>
                        <Button Style="{StaticResource BankTileButton}" Tag="Hsbc" Click="BankButton_Click">
                            <Image Source="/Images/hsbc.png" Stretch="Uniform"/>
                        </Button>
                        <Button Style="{StaticResource BankTileButton}" Tag="Itau" Click="BankButton_Click">
                            <Image Source="/Images/itau2.png" Stretch="Uniform"/>
                        </Button>
                        <Button Style="{StaticResource BankTileButton}" Tag="BBVA" Click="BankButton_Click">
                            <Image Source="/Images/bbva.png" Stretch="Uniform"/>
                        </Button>
                        <Button Style="{StaticResource BankTileButton}" Tag="Santander" Click="BankButton_Click">
                            <Image Source="/Images/santander.png" Stretch="Uniform"/>
                        </Button>
                        <Button Style="{StaticResource BankTileButton}" Tag="Scotiabank" Click="BankButton_Click">
                            <Image Source="/Images/scotiabank.png" Stretch="Uniform"/>
                        </Button>
                    </UniformGrid>
                </Grid>
            </Border>

            <!-- Otras opciones -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Otras opciones" Style="{StaticResource SectionTitle}"/>

                    <StackPanel Grid.Row="1" Margin="0,8,0,0" VerticalAlignment="Top">
                        <StackPanel HorizontalAlignment="Center" Margin="0,0,0,12">
                            <Button Width="96" Height="96" Background="White"
                                    BorderBrush="{StaticResource Brush.Border}" BorderThickness="1"
                                    Tag="EnvioMasivo" Click="BankButton_Click">
                                <Image Source="/Images/envioMasivo.png" Width="48" Height="48"/>
                            </Button>
                            <TextBlock Text="Envío masivo" Margin="0,8,0,0"
                                       Foreground="{StaticResource Brush.TextSecondary}"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel HorizontalAlignment="Center" Margin="0,0,0,12">
                            <Button Width="96" Height="96" Background="White"
                                    BorderBrush="{StaticResource Brush.Border}" BorderThickness="1"
                                    Tag="EnvioNiveles" Click="BankButton_Click">
                                <Image Source="/Images/disconnected.png" Width="48" Height="48"/>
                            </Button>
                            <TextBlock Text="Notificar desconexiones" Margin="0,8,0,0"
                                       Foreground="{StaticResource Brush.TextSecondary}"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel HorizontalAlignment="Center">
                            <Button Width="96" Height="96" Background="White"
                                    BorderBrush="{StaticResource Brush.Border}" BorderThickness="1"
                                    Tag="EnvioManual" Click="BankButton_Click">
                                <Image Source="/Images/enviomanual.png" Width="48" Height="48"/>
                            </Button>
                            <TextBlock Margin="0,8,0,0" HorizontalAlignment="Center"
                                       Foreground="{StaticResource Brush.TextSecondary}">
                                <Run Text="Envío "/><Run Language="es-uy" Text="1a1"/>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
