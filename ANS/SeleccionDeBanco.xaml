<Window x:Class="ANS.SeleccionDeBanco"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Selección de Banco" WindowState="Maximized">
    <Grid>
        <materialDesign:ColorZone Mode="Dark"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                <!-- Título -->
                <TextBlock Text="Menú administrativo" 
                       FontSize="24"  
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

                <TextBlock Text="Elegí un módulo" 
                       FontSize="18"  
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>
                <!-- UniformGrid para colocar 3 botones de imagen -->
                <UniformGrid Columns="5" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="50">
                    <!-- Primer banco -->
                    <Button Click="BankButton_Click" Tag="BBVA" BorderBrush="Black" BorderThickness="5" Background="White" Margin="30">
                        <Image Source="Images/bbva.png" Width="150" Height="150"/>
                    </Button>
                    <!-- Segundo banco -->
                    <StackPanel>
                        <Button Click="BankButton_Click" Tag="Santander" BorderBrush="Black" BorderThickness="5" Background="White" Margin="30">
                        <Image Source="Images/santander.png" Width="150" Height="150"/>
                    </Button>
                    </StackPanel>
                    <!-- Tercer banco -->
                    <Button Click="BankButton_Click" Tag="Scotiabank" BorderBrush="Black" BorderThickness="5" Background="White" Margin="30">
                        <Image Source="Images/scotiabank.png" Width="150" Height="150"/>
                    </Button>
                    <StackPanel Margin="30"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                        <Button Click="BankButton_Click"
                          Tag="EnvioMasivo"
                          BorderBrush="Black" BorderThickness="5"
                          Background="GhostWhite"
                          Width="90" Height="90">
                        <Image Source="Images/envioMasivo.png"
                        Width="50" Height="50"/>
                        </Button>
                        <TextBlock Text="Envío masivo"
                         FontSize="18"
                         HorizontalAlignment="Center"
                         Margin="0,10,0,0"/>
                    </StackPanel>
                    <StackPanel Margin="30"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center">
                        <Button Click="BankButton_Click"
                   Tag="EnvioNiveles"
                   BorderBrush="Black" BorderThickness="5"
                   Background="GhostWhite"
                   Width="90" Height="90">
                            <Image Source="Images/disconnected.png"
                 Width="50" Height="50"/>
                        </Button>
                        <TextBlock Text="Notificar desconexiones"
                  FontSize="18"
                  HorizontalAlignment="Center"
                  Margin="0,10,0,0"/>
                    </StackPanel>
                </UniformGrid>

            </StackPanel>
        </materialDesign:ColorZone>
    </Grid>
</Window>
