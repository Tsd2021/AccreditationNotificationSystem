<UserControl x:Class="ANS.UserControls.ScotiabankOperationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d"
             d:DesignWidth="980" d:DesignHeight="560"
             Background="Transparent">

    <!-- =================== Recursos locales (alineados a la app) =================== -->
    <UserControl.Resources>
        <!-- Colores base -->
        <SolidColorBrush x:Key="Brush.Border"        Color="#E0E0E0"/>
        <SolidColorBrush x:Key="Brush.TextPrimary"   Color="#212121"/>
        <SolidColorBrush x:Key="Brush.TextSecondary" Color="#757575"/>
        <SolidColorBrush x:Key="MaterialDesignPaper" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="MaterialDesignCardBackground" Color="#FFFFFFFF"/>

        <!-- Card -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource MaterialDesignCardBackground}"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>

        <!-- Título de sección -->
        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource Brush.TextPrimary}"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- Botón primario (rojo app) -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#D32F2F"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="BorderBrush" Value="#C62828"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E53935"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#B71C1C"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Botón ghost (auxiliar) -->
        <Style x:Key="GhostButton" TargetType="Button">
            <Setter Property="Foreground" Value="#D32F2F"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="BorderBrush" Value="#D32F2F"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#10D32F2F"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <!-- =================== Contenido =================== -->
    <Grid>
        <!-- Acción auxiliar arriba a la derecha -->
        <DockPanel LastChildFill="False" Margin="0,0,0,8">
            <Button Content="Asociar mails"
                    DockPanel.Dock="Right"
                    Style="{StaticResource GhostButton}"
                    Command="{Binding EjecutarAltaEmailDestinoCommand}"
                    Margin="0,0,4,0"/>
        </DockPanel>

        <!-- Busy overlay + layout principal -->
        <xctk:BusyIndicator IsBusy="{Binding IsLoading}"
                            BusyContent="Procesando...">
            <Grid>
                <!-- Más aire a Acreditaciones -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition Width="0.8*"/>
                </Grid.ColumnDefinitions>

                <!-- =================== Columna Izquierda: Acreditaciones =================== -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,8,0">
                    <Grid Grid.IsSharedSizeScope="True">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Header -->
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" SharedSizeGroup="ColLabel"/>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="ColAction"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Acreditaciones" Style="{StaticResource SectionTitle}" Grid.ColumnSpan="2"/>

                        <!-- Tanda 1 -->
                        <TextBlock Grid.Row="1" Grid.Column="0"
                                   Text="Acreditar Tanda 1 (Henderson)"
                                   Foreground="{StaticResource Brush.TextSecondary}"
                                   VerticalAlignment="Center"
                                   Margin="0,4,16,4"/>
                        <Button Grid.Row="1" Grid.Column="1"
                                Content="TANDA 1"
                                Style="{StaticResource PrimaryButton}"
                                Command="{Binding EjecutarTanda1HendersonTXTCommand}"/>

                        <!-- Tanda 2 -->
                        <TextBlock Grid.Row="2" Grid.Column="0"
                                   Text="Acreditar Tanda 2 (Henderson)"
                                   Foreground="{StaticResource Brush.TextSecondary}"
                                   VerticalAlignment="Center"
                                   Margin="0,4,16,4"/>
                        <Button Grid.Row="2" Grid.Column="1"
                                Content="TANDA 2"
                                Style="{StaticResource PrimaryButton}"
                                Command="{Binding EjecutarTanda2HendersonTXTCommand}"/>

                        <!-- Día a Día -->
                        <TextBlock Grid.Row="3" Grid.Column="0"
                                   Text="Acreditar Día a Día (TXT)"
                                   Foreground="{StaticResource Brush.TextSecondary}"
                                   VerticalAlignment="Center"
                                   Margin="0,4,16,0"/>
                        <Button Grid.Row="3" Grid.Column="1"
                                Content="DXD"
                                Style="{StaticResource PrimaryButton}"
                                Command="{Binding EjecutarDiaADiaTXTCommand}"/>
                    </Grid>
                </Border>

                <!-- =================== Columna Derecha: Excel =================== -->
                <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="8,0,0,0">
                    <Grid Grid.IsSharedSizeScope="True">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Header -->
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" SharedSizeGroup="ColLabel"/>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="ColAction"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Excel" Style="{StaticResource SectionTitle}" Grid.ColumnSpan="2"/>

                        <!-- Tanda 1 -->
                        <TextBlock Grid.Row="1" Grid.Column="0"
                                   Text="Tanda 1 (Henderson)"
                                   Foreground="{StaticResource Brush.TextSecondary}"
                                   VerticalAlignment="Center"
                                   Margin="0,4,16,4"/>
                        <Button Grid.Row="1" Grid.Column="1"
                                Content="Generar Excel T1"
                                Style="{StaticResource PrimaryButton}"
                                Command="{Binding EjecutarTanda1HendersonExcelCommand}"/>

                        <!-- Tanda 2 -->
                        <TextBlock Grid.Row="2" Grid.Column="0"
                                   Text="Tanda 2 (Henderson)"
                                   Foreground="{StaticResource Brush.TextSecondary}"
                                   VerticalAlignment="Center"
                                   Margin="0,4,16,4"/>
                        <Button Grid.Row="2" Grid.Column="1"
                                Content="Generar Excel T2"
                                Style="{StaticResource PrimaryButton}"
                                Command="{Binding EjecutarTanda2HendersonExcelCommand}"/>

                        <!-- Día a Día -->
                        <TextBlock Grid.Row="3" Grid.Column="0"
                                   Text="Día a Día"
                                   Foreground="{StaticResource Brush.TextSecondary}"
                                   VerticalAlignment="Center"
                                   Margin="0,4,16,0"/>
                        <Button Grid.Row="3" Grid.Column="1"
                                Content="Generar Excel DXD"
                                Style="{StaticResource PrimaryButton}"
                                Command="{Binding EjecutarDiaADiaExcelCommand}"/>
                    </Grid>
                </Border>
            </Grid>
        </xctk:BusyIndicator>
    </Grid>
</UserControl>
