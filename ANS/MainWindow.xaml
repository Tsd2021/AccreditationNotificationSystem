<Window x:Class="ANS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:ANS.Model"
        Title="Accreditation Notification System" 
        WindowState="Maximized">
    <Window.Resources>

            <!-- Estilo para un botón circular -->
        <Style x:Key="CircularButtonStyle" TargetType="Button">

            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="LightBlue"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="18" 
                            SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          RecognizesAccessKey="True"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <DataTemplate DataType="{x:Type local:SnackbarMsg}">
            <Border Background="{Binding Fondo}"
                    Padding="6"
                    CornerRadius="8">
                <TextBlock Text="{Binding Texto}" 
                           Foreground="White"
                           FontSize="18"
                           FontWeight="Normal"
                           TextWrapping="Wrap"
                           TextAlignment="Center" />
            </Border>
        </DataTemplate>
    </Window.Resources>

    <!-- Grid raíz -->
    <Grid>
        <materialDesign:ColorZone Mode="Dark"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <!-- Encabezado (hora y botón de configuración) -->
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Encabezado con reloj y botón de configuración -->
                <Grid Grid.Row="0">
                    <!-- Reloj centrado -->
                    <TextBlock Text="{Binding CurrentTime, StringFormat=yyyy-MM-dd HH:mm:ss}"
                               FontSize="48"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    <!-- Botón de configuración en la esquina superior derecha -->
                    <!-- Botón de configuración flotante -->
                    <Button x:Name="SettingsButton"
                        Width="36" Height="36"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="16"
                        Style="{StaticResource CircularButtonStyle}"
                        Click="SettingsButton_Click">
                        <materialDesign:PackIcon Kind="Settings" Width="28" Height="28" Foreground="LightGoldenrodYellow"/>
                    </Button>
                </Grid>

                <!-- Contenido principal -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Columna izquierda: Título y Snackbar -->
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Título -->
                        <TextBlock Text="Accreditation Notification System" 
                                   Foreground="White"
                                   FontSize="26"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Top"
                                   Grid.Row="0" Margin="0,50,0,0"/>

                        <!-- Snackbar justo debajo del título -->
                        <materialDesign:Snackbar
                             x:Name="JobSnackbar"
                             MessageQueue="{materialDesign:MessageQueue}"
                             Background="Transparent"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Top"
                             Panel.ZIndex="999"
                             Margin="0,10,0,0"
                             Grid.Row="1"/>
                    </Grid>

                    <!-- Columna derecha: Lista de mensajes -->
                    <Border Grid.Column="1"
                            Grid.RowSpan="3"
                            Padding="10"
                            BorderBrush="Gray"
                            BorderThickness="2"
                            Background="{DynamicResource MaterialDesignPaper}"
                            CornerRadius="8"
                            Margin="10">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ListView ItemsSource="{Binding TuplaMensajes}" 
                                      Background="WhiteSmoke"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="5" 
                                                Background="LightGray"
                                                CornerRadius="10"
                                                Margin="5"
                                                HorizontalAlignment="Stretch">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <!-- Icono -->
                                                <materialDesign:PackIcon 
                                                    Kind="{Binding Icon}" 
                                                    Width="19" Height="19" 
                                                    Margin="10" 
                                                    VerticalAlignment="Center" 
                                                    Grid.Column="0"/>
                                                <TextBlock Text="{Binding Estado}" 
                                                           FontSize="16"
                                                           FontWeight="Bold"
                                                           Foreground="Black"
                                                           Margin="10"
                                                           VerticalAlignment="Center"
                                                           Grid.Column="1"/>
                                                <TextBlock Text="{Binding Tipo}" 
                                                           FontSize="14"
                                                           Foreground="DarkGray"
                                                           Margin="10"
                                                           VerticalAlignment="Center"
                                                           Grid.Column="2"/>
                                                <TextBlock Text="{Binding Banco}" 
                                                           FontSize="14"
                                                           Foreground="{Binding Color, Converter={StaticResource ColorToBrushConverter}}"
                                                           Margin="10"
                                                           VerticalAlignment="Center"
                                                           Grid.Column="3"/>
                                                <TextBlock Text="{Binding Fecha, StringFormat=yyyy-MM-dd HH:mm:ss}" 
                                                           FontSize="12"
                                                           Foreground="Gray"
                                                           Margin="10"
                                                           VerticalAlignment="Center"
                                                           Grid.Column="4"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Grid>
        </materialDesign:ColorZone>
    </Grid>
</Window>
