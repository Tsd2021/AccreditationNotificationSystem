<Window x:Class="ANS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:ANS.Model"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Accreditation Notification System" 
        Height="600" Width="800">
    <Window.Resources>
        <DataTemplate DataType="{x:Type local:SnackbarMsg}">
            <Border Background="{Binding Fondo}" Padding="10">
                <TextBlock Text="{Binding Texto}" 
                       Foreground="White"
                       FontSize="16"
                       FontWeight="Bold"/>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <materialDesign:ColorZone Mode="Dark">
        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid HorizontalAlignment="Left" Margin="111,-30,0,29">
                <materialDesign:Snackbar
        x:Name="JobSnackbar"
        MessageQueue="{materialDesign:MessageQueue}"
        Background="Transparent"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Panel.ZIndex="999"
        Width="400"/>
            </Grid>


            <Grid Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="{Binding CurrentTime}"
                           FontSize="48"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Grid>


            <Grid Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Accreditation Notification System" 
                           Foreground="White"
                           FontSize="24"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Grid>
        </Grid>
    </materialDesign:ColorZone>
</Window>
