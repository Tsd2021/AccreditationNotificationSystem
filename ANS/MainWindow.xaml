<Window
    x:Class="ANS.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:local="clr-namespace:ANS.Model"
    Title="Accreditation Notification System" Height="600" Width="800">
    <Window.Resources>
        <!-- DataTemplate para TextBlock -->
        <DataTemplate DataType="{x:Type local:SnackbarMsg}">
            <Border Background="{Binding Fondo}">
                <TextBlock Text="{Binding Texto}" />
            </Border>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <!-- Dividimos la ventana en dos columnas -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <!-- Columna para el reloj -->
            <ColumnDefinition Width="*"/>
            <!-- Columna para otros contenidos -->
        </Grid.ColumnDefinitions>
        <TextBlock Text="accreditation notification system." FontSize="15" FontWeight="Bold" Canvas.Left="150" Canvas.Top="10" />
        <Grid>
            <!-- Contenido de tu ventana -->

            <materialDesign:Snackbar
    x:Name="JobSnackbar"
    MessageQueue="{materialDesign:MessageQueue}"
    Margin="10"
    HorizontalAlignment="Left"
    VerticalAlignment="Bottom" />

        </Grid>
        <!-- Contenedor del reloj analógico y digital -->
        <Border Grid.Column="0" Margin="10" Background="Transparent" BorderBrush="Transparent" BorderThickness="2">
            <Grid>
                <!-- Reloj digital encima -->
                <TextBlock x:Name="DigitalClockText"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="Black"
                           Margin="0,80,0,0"/>

                <!-- Reloj analógico debajo -->
                <Viewbox Stretch="Uniform">
                    <Canvas x:Name="ClockCanvas" Width="300" Height="300">
                        <!-- Esfera del reloj -->
                        <Ellipse Width="300" Height="300" Stroke="Black" StrokeThickness="2" Fill="LightBlue" />

                        <!-- Manecilla de la hora -->
                        <Line x:Name="HourHand" Stroke="Black" StrokeThickness="6" StrokeEndLineCap="Round"
                              X1="150" Y1="150" X2="150" Y2="100" />

                        <!-- Manecilla del minuto -->
                        <Line x:Name="MinuteHand" Stroke="Black" StrokeThickness="4" StrokeEndLineCap="Round"
                              X1="150" Y1="150" X2="150" Y2="70" />

                        <!-- Manecilla del segundo -->
                        <Line x:Name="SecondHand" Stroke="Red" StrokeThickness="2" StrokeEndLineCap="Round"
                              X1="150" Y1="150" X2="150" Y2="50" />

                        <!-- Números del reloj -->
                        <TextBlock Text="12" FontSize="16" FontWeight="Bold" Canvas.Left="140" Canvas.Top="10" />
                        <TextBlock Text="1" FontSize="16" FontWeight="Bold" Canvas.Left="215" Canvas.Top="30" />
                        <TextBlock Text="2" FontSize="16" FontWeight="Bold" Canvas.Left="260" Canvas.Top="85" />
                        <TextBlock Text="3" FontSize="16" FontWeight="Bold" Canvas.Left="275" Canvas.Top="145" />
                        <TextBlock Text="4" FontSize="16" FontWeight="Bold" Canvas.Left="260" Canvas.Top="205" />
                        <TextBlock Text="5" FontSize="16" FontWeight="Bold" Canvas.Left="215" Canvas.Top="260" />
                        <TextBlock Text="6" FontSize="16" FontWeight="Bold" Canvas.Left="145" Canvas.Top="275" />
                        <TextBlock Text="7" FontSize="16" FontWeight="Bold" Canvas.Left="80" Canvas.Top="260" />
                        <TextBlock Text="8" FontSize="16" FontWeight="Bold" Canvas.Left="35" Canvas.Top="205" />
                        <TextBlock Text="9" FontSize="16" FontWeight="Bold" Canvas.Left="20" Canvas.Top="145" />
                        <TextBlock Text="10" FontSize="16" FontWeight="Bold" Canvas.Left="35" Canvas.Top="85" />
                        <TextBlock Text="11" FontSize="16" FontWeight="Bold" Canvas.Left="80" Canvas.Top="30" />
                    </Canvas>
                </Viewbox>
            </Grid>
        </Border>
    </Grid>
</Window>
