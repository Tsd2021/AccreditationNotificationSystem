<Window x:Class="ANS.BancoModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Funciones por banco" WindowStartupLocation="CenterOwner"
        WindowState="Maximized"
        >
    <Grid>
        
        <materialDesign:ColorZone Mode="Dark"
       HorizontalAlignment="Stretch"
       VerticalAlignment="Stretch">
            <Grid Margin="20">
                <!-- Control Card que actúa como CardView -->
                <materialDesign:Card  Margin="10" Background="{DynamicResource MaterialDesignPaper}">
                    <StackPanel>
                        <TextBlock x:Name="BancoTitle"
                                   Text="Operaciones" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,12" 
                                   HorizontalAlignment="Center"/>
                        <ContentControl x:Name="BankOperationsContent"/>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>
        </materialDesign:ColorZone>
    </Grid>
</Window>
